modules = ["nodejs-20", "web", "angular-node-20", "angular-node-24"]
run = "npm run watch"

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "npm run watch"]

[workflows]
runButton = "Run Angular App"

[[workflows.workflow]]
name = "Run Angular App"
author = 46120968
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "ng serve --host 0.0.0.0 --port 5000"

[[ports]]
localPort = 5000
externalPort = 80
